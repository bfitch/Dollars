<table class="table-minimal">
  <thead>
    <tr>
      <th>Date</th>
      <th>Payee</th>
      <th>Amount</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |t| %>
      <tr>
        <td><%= t.date %></td>
        <td><%= t.payee.name %></td>
        <td>$<%= t.amount %></td>
        <td><%= t.category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
