<header class="navigation">
    <div class="menu-wrapper">
      <a href="/budget" class="logo">
        <img src="http://www.decalsplanet.com/img_b/vinyl-decal-sticker-7191.jpg" alt="">
      </a>
      <p class="navigation-menu-button" id="js-mobile-menu">MENU</p>
      <div class="nav">
        <ul id="navigation-menu">
          <li><%= link_to "Transactions", transactions_path %></li>
          <li><%= link_to "Categories", categories_path %></li>
          <li><%= link_to "+", new_transaction_path %></li>
        </ul>
      </div>
    </div>
  </header>

  <script>
    $(function() {
      var menu = $('#navigation-menu');
      var menuToggle = $('#js-mobile-menu');

      $(menuToggle).on('click', function(e) {
        e.preventDefault();
        menu.slideToggle(function(){
          if(menu.is(':hidden')) {
            menu.removeAttr('style');
          }
        });
      });
    });
  </script>

